<%= form_for [:admin, @admin_message] do |f| %>
  <% if @admin_message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_message.errors.count, "error") %> prohibited this admin_message from being saved:</h2>

      <ul>
      <% @admin_message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>訊息內容</legend>
    <%= f.label :subject, '標題' %>
    <%= f.text_field :subject %>
    <%= f.label :content, '內文' %>
    <%= f.text_area :content, :class => 'ckeditor' %>

  </fieldset>

  <% if params[:action] == 'new' %>
  <fieldset>
  <legend>收件人</legend>

    <% Message::RECEIVERS.each do |receiver, value| %>
      <%= label_tag "receivers_#{receiver}", :class => 'checkbox' do %>
        <%= check_box_tag "receivers[#{receiver}]", receiver, false, {:name => "receivers[]"}%> <%= value %>
      <% end %>
    <% end %>

  </fieldset>
  <% end %>
  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary', :data => { :method => "put", :disable_with => "Saving..." }, :value => '送出' %>
  </div>
<% end %>
